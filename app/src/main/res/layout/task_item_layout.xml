<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="100dp"
        android:textSize="8pt"
        android:text="Task Title" />

    <TextView
        android:id="@+id/list_task_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/list_task_title"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="10dp"
        android:text="Tags" />

    <TextView
        android:id="@+id/list_task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="00/00/0000" />

    <TextView
        android:id="@+id/list_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/list_task_date"
        android:text="00:00 a.m." />
</RelativeLayout>